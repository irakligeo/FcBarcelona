<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <ImageView
        android:layout_margin="3dp"
        android:id="@+id/list_image_id"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:src="@android:drawable/btn_dialog" />

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:id="@+id/name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/list_image_id"
        android:text="name" />

    <TextView
        android:textColor="@android:color/holo_orange_light"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="220dp"
        android:id="@+id/list_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name" />


    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/list_image_id"
        android:id="@+id/age_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="age" />

    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="220dp"
        android:id="@+id/list_age_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="age" />


    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="45dp"
        android:layout_toEndOf="@id/list_image_id"
        android:id="@+id/height_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="height" />

    <TextView
        android:layout_marginTop="45dp"
        android:layout_marginLeft="220dp"
        android:id="@+id/list_height_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="height" />


    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@id/list_image_id"
        android:id="@+id/birthPlace_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="birthPlace" />

    <TextView
        android:layout_marginTop="60dp"
        android:layout_marginLeft="220dp"
        android:id="@+id/list_birthPlace_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="birthPlace" />


    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="75dp"
        android:layout_toEndOf="@id/list_image_id"
        android:id="@+id/position_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="position" />

    <TextView
        android:layout_marginTop="75dp"
        android:layout_marginLeft="220dp"
        android:id="@+id/list_position_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="position" />
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="90dp"
        android:layout_toEndOf="@id/list_image_id"
        android:id="@+id/number_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="number" />

    <TextView
        android:layout_marginTop="90dp"
        android:layout_marginLeft="220dp"
        android:id="@+id/list_number_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="number" />
    <TextView
        android:layout_marginLeft="15dp"
        android:textSize="20sp"
        android:layout_below="@+id/list_image_id"
        android:id="@+id/detail"
        android:text="jsadf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </RelativeLayout>

    </ScrollView>

</RelativeLayout>